version: '3.6'

services:
  parity:
    image: parity/parity:v2.7.2-stable
    restart: always
    command: |
      --chain=kovan
      --mode=active
      --interface=all
      --snapshot-peers=10
      --min-peers=5
      --max-peers=10
      --jsonrpc-interface=0.0.0.0
      --jsonrpc-cors=all
      --jsonrpc-hosts=all
      --jsonrpc-apis=all
      --db-compaction=ssd
      --no-persistent-txqueue
    ports:
	    - "8545:8545"