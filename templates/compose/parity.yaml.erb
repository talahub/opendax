version: '3.6'

services:
  parity:
    image: parity/parity:v2.7.2-stable
    restart: always
    command: |
      --chain=kovan
      --mode=last
      --interface=all
      --snapshot-peers=10
      --min-peers=25
      --max-peers=50
      --jsonrpc-interface=0.0.0.0
      --jsonrpc-cors=all
      --jsonrpc-hosts=all
      --jsonrpc-apis=all
      --db-compaction=ssd
      --no-persistent-txqueue
    volumes:
      - ../data/parity:/home/parity/.local/share/io.parity.ethereum
    ports:
      - "8545:8545"